<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block page_title %}{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('bundles/theodothothcms/css/jqModal.css') }}" type="text/css" media="screen" />
        <link rel="stylesheet" href="{{ asset('bundles/theodothothcms/css/main.css') }}" type="text/css" media="all" />
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('bundles/theodothothcms/js/jquery-1.6.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/theodothothcms/js/global.js') }}" type="text/javascript"></script>
        {% block javascripts_assets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    {% set body_class = body_class|default('') %}
    <body{% if body_class != '' %} class="{{ body_class }}"{% endif %}>
        <div id="page" class="thoth">
            <div id="header">
                {% render "TheodoThothCmsBundle:Backend\\User:boxComponent" %}
                {% include "TheodoThothCmsBundle::navigation.html.twig" %}
                <div id="header_bottom">
                    <div></div>
                </div>
            </div>

            <div id="main">
                {% block notice %}
                    {% if app.session.hasFlash('notice') %}
                        <div id="notice">
                            <p>{{ app.session.flash('notice') }}</p>
                        </div>
                    {% endif %}
                {% endblock %}

                {% block global_error %}
                    {% if app.session.hasFlash('error') %}
                        <div id="error">
                            <p>{{ app.session.flash('error') }}</p>
                        </div>
                    {% endif %}
                {% endblock %}
                <div id="content">
                    {% block cmscontent %}{% endblock %}
                </div>
            </div>
            <div class="clear"></div>
         </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
